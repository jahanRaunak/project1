<LinearLayout
    android:background="@drawable/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:id="@+id/l7"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:id="@+id/cw_iv"
        android:src="@drawable/companywelcome"
        android:layout_margin="5dp"/>
    <TextView
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cw_tv"
        android:text="....."
        android:textColor="#00f"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="30sp"
        android:fontFamily="cursive"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/in1"
        android:gravity="center"
        android:orientation="horizontal">
    <Button
        android:background="@drawable/ost"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/cw_job_post"
        android:layout_margin="10dp"
        android:onClick="jobPost"/>

    <Button
        android:background="@drawable/resume"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginRight="5dp"
        android:id="@+id/cw_resume"
        android:onClick="resume"/>
    </LinearLayout>

    <Button
        android:background="@drawable/exit"
        android:layout_margin="5dp"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:id="@+id/cw_exit"
        android:onClick="exitnow"/>
</LinearLayout>